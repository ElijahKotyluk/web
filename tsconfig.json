{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"declaration": false,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"jsx": "preserve",
		"lib": ["dom", "esnext"],
		"module": "esnext",
		"moduleResolution": "node",
		"paths": {
      "@/*": ["src/*"]
    },
		"sourceMap": true,
		"strict": true,
		"target": "esnext",
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"tests/**/*.ts",
		"tests/**/*.tsx"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}